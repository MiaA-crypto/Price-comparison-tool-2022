def not_blank(question,error):
  valid = False
  while not valid:
    response=input(question)
    if response == "" or " ":
      #checks if response is blank and if it is, print an error
      print(error)
    else:
      return response 
      


#main
error=("please enter a valid input")
question=("enter your name ")

name=not_blank(question,error)
